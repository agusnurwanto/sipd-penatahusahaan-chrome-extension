{
	"manifest_version": 2,
	"name": "SIPD penatausahaan tools",
	"description": "Chrome extension untuk mempermudah manajemen data di web sipd.kemendagri.go.id/siap",
	"version": "1",
	"icons": {
		"16": "img/indonesia-flag.png",
		"48": "img/indonesia-flag.png",
		"128": "img/indonesia-flag.png"
	},
	"browser_action": {
		"default_icon": "img/indonesia-flag.png",
		"default_popup": "popup.html",
		"default_title": "Manajemen SIPD"
	},
	"background": {
		"persistent": true,
		"scripts": [
			"config.js",
			"js/jquery.min.js",
			"js/background/promise.js",
			"js/background/bg-functions.js",
			"js/background/background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"https://*.sipd.kemendagri.go.id/*"
			],
			"css": [
				"css/content.css"
			],
			"js": [
				"js/jquery.min.js",
				"config.js",
				"js/content/functions.js",
				"js/content/app.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": [
				"https://*.sipd.kemendagri.go.id/*"
			],
			"js": [
				"js/content/document_start.js"
			],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": [
		"/config.js",
		"/js/*",
		"/img/*",
		"/excel/*"
	],
	"permissions": [
		"webRequest",
		"https://*/",
		"http://*/",
		"activeTab",
		"storage",
		"tabs"
	]
}